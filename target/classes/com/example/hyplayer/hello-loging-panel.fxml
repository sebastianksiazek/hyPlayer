<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hyplayer.HelloController">
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="homeName" text="hyPlayer">
                    <font>
                        <Font size="58.0" />
                    </font>
                </Label>
                <TextField fx:id="usernameField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="200.0" />
                <PasswordField fx:id="passwordField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="200.0" />
                <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" text="Zaloguj się" />
                <Label fx:id="errorMsg" alignment="CENTER" prefHeight="25.0" prefWidth="300.0" />
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="100.0" spacing="20.0">
                    <children>
                        <Label fx:id="qstnRegistration" text="Nie masz jeszcze konta?">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin></Label>
                        <Button fx:id="registrationButton" mnemonicParsing="false" onAction="#registrationButtonAction" text="Zarejestruj się" />
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
